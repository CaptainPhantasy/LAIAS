# LAIAS Docker Orchestrator - Environment Configuration

# Service Configuration
SERVICE_NAME=docker-orchestrator
SERVICE_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Docker Configuration
DOCKER_HOST=null
DOCKER_NETWORK=laias-network
AGENT_IMAGE_BASE=laias/agent-runner:latest
AGENT_CODE_PATH=/var/laias/agents

# Container Configuration
DEFAULT_CPU_LIMIT=1.0
DEFAULT_MEMORY_LIMIT=512m
CONTAINER_STOP_TIMEOUT=10
MAX_CONTAINERS=50

# Database Configuration (optional, for persistence)
DATABASE_URL=postgresql+asyncpg://laias:laias_secure_password@localhost:5432/laias

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30

# Security Configuration
SECRET_KEY=change-this-in-production
API_KEY_HEADER=X-API-Key
API_KEYS=[]
