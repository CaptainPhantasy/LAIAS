# =============================================================================
# LAIAS Agent Generator Service - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider API Keys (REQUIRED)
# -----------------------------------------------------------------------------
# Portkey API key (RECOMMENDED - provides gateway to ZhipuAI GLM-4.7 and others)
PORTKEY_API_KEY=pk-your-portkey-api-key-here

# Direct provider keys (alternatives)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ZAI_API_KEY=your-zai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Default LLM provider: portkey (recommended), zai, openai, anthropic
DEFAULT_LLM_PROVIDER=portkey

# Default model for generation (GLM-4.7 via Portkey)
DEFAULT_MODEL=@zhipu/glm-4.7-flashx

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://laias:laias@localhost:5432/laias

# PostgreSQL (for PGSearchTool)
PG_HOST=localhost
PG_PORT=5432
PG_USER=laias
PG_PASSWORD=laias
PG_DATABASE=laias

# MySQL (for MySQLSearchTool)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=laias

# MongoDB (for MongoDBSearchTool)
MONGODB_URI=mongodb://localhost:27017/laias

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Vector Database Configuration
# -----------------------------------------------------------------------------
# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1

# -----------------------------------------------------------------------------
# Search & Research Tools
# -----------------------------------------------------------------------------
# Serper (Google Search API)
SERPER_API_KEY=your-serper-api-key

# Exa AI Search
EXA_API_KEY=your-exa-api-key

# Tavily Search
TAVILY_API_KEY=your-tavily-api-key

# GitHub
GITHUB_TOKEN=ghp-your-github-token

# -----------------------------------------------------------------------------
# Web Scraping Tools
# -----------------------------------------------------------------------------
# Firecrawl
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Browserbase
BROWSERBASE_API_KEY=your-browserbase-api-key

# -----------------------------------------------------------------------------
# Cloud & Storage Tools
# -----------------------------------------------------------------------------
# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Azure
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# -----------------------------------------------------------------------------
# Automation Tools
# -----------------------------------------------------------------------------
# Apify
APIFY_API_KEY=your-apify-api-key

# Composio
COMPOSIO_API_KEY=your-composio-api-key

# MultiOn
MULTION_API_KEY=your-multion-api-key

# -----------------------------------------------------------------------------
# Communication Tools
# -----------------------------------------------------------------------------
# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# -----------------------------------------------------------------------------
# Project Management Tools
# -----------------------------------------------------------------------------
# Notion
NOTION_API_KEY=secret-your-notion-api-key

# Jira
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@example.com
JIRA_DOMAIN=your-domain.atlassian.net

# Linear
LINEAR_API_KEY=your-linear-api-key

# Asana
ASANA_ACCESS_TOKEN=your-asana-token

# Trello
TRELLO_API_KEY=your-trello-api-key
TRELLO_TOKEN=your-trello-token

# -----------------------------------------------------------------------------
# CRM Tools
# -----------------------------------------------------------------------------
# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key

# Salesforce
SALESFORCE_USERNAME=your-username
SALESFORCE_PASSWORD=your-password
SALESFORCE_SECURITY_TOKEN=your-security-token

# -----------------------------------------------------------------------------
# Payment Tools
# -----------------------------------------------------------------------------
# Stripe
STRIPE_API_KEY=sk_test_your-stripe-key

# -----------------------------------------------------------------------------
# Social Media Tools
# -----------------------------------------------------------------------------
# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret

# LinkedIn
LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# -----------------------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Service port
SERVICE_PORT=8001

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode
DEBUG=false

# -----------------------------------------------------------------------------
# Tool Configuration
# -----------------------------------------------------------------------------
# Enable/disable tool integration
TOOLS_ENABLED=true

# Enable MCP server connections
MCP_SERVERS_ENABLED=true

# Default tool execution timeout (seconds)
TOOL_TIMEOUT=60

# Maximum tools per agent
MAX_TOOLS_PER_AGENT=20
